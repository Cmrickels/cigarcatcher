{% extends 'admin-base.html.twig' %}

{% block title %}
    Wrapper Creation
{% endblock %}

{% block styles %}
    <style>

    </style>
{% endblock %}

{% block javascripts %}
    <script>
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#upload-image-holder').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#appbundle_wrapper_image").change(function(){
            readURL(this);
        });

    </script>
{% endblock %}

{% block body %}
    <div class="container">
        <a href="{{ path('wrapper_index') }}"><- Back to list</a>

        <div class="row">
            <div class="col-md-6"><h2>New Wrapper</h2></div>
        </div>
        {{ form_start(form) }}
        {#<div class="col-md-2"></div>#}
        <div class="row">
            <div class="col-md-6">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
            </div>
            <div class="col-md-6">
                {{ form_label(form.color) }}
                {{ form_widget(form.color) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
            </div>
            <div class="col-md-3">
                <img style="max-height:150px;" id="upload-image-holder" src="">
            </div>
        </div>
        <button type="submit" class="btn success" style="margin-top:10px;">Create</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
