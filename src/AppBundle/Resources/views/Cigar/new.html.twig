{% extends 'admin-base.html.twig' %}

{% block title %}
    Cigar Creation
{% endblock %}

{% block styles %}
    <style>

    </style>
{% endblock %}

{% block javascripts %}
    <script>
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#upload-image-holder').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#appbundle_cigar_image").change(function(){
            readURL(this);
        });


    </script>
{% endblock %}

